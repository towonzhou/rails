<h1>New user</h1>

<%= form_for @user, :url => users_path, :html => { :multipart => true } do |form| %>
  <div class="field">
    <%= form.label :name%><br />
    <%= form.text_field :name%>
  </div>
  <div class="field">
    <%= form.label :avatar %><br />
    <%= form.file_field :avatar %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

